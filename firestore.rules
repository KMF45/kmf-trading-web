rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only access their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Verification codes - only Cloud Functions can access (server-side only)
    match /verificationCodes/{docId} {
      allow read, write: if false;
    }

    // Password reset tokens - only Cloud Functions can access (server-side only)
    match /passwordResetTokens/{docId} {
      allow read, write: if false;
    }

    // Beta signups from landing page â€” anyone can create, nobody can read/update/delete
    match /betaSignups/{docId} {
      allow create: if request.resource.data.keys().hasAll(['email', 'source', 'createdAt'])
                    && request.resource.data.email is string
                    && request.resource.data.email.size() > 0
                    && request.resource.data.email.size() < 256;
      allow read, update, delete: if false;
    }
  }
}
