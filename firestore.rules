rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Only authenticated users can access their own data
    // No user can read or write another user's data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null
                         && request.auth.uid == userId;
    }

    // Beta signups â€” anyone can create, nobody can read/update/delete
    match /betaSignups/{docId} {
      allow create: if request.resource.data.keys().hasAll(['email', 'source', 'createdAt'])
                    && request.resource.data.email is string
                    && request.resource.data.email.size() > 0
                    && request.resource.data.email.size() < 256;
      allow read, update, delete: if false;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
